<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.megabest">



    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"

        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Megabest"
        android:windowSoftInputMode="adjustResize|stateAlwaysHidden">
        <activity android:name=".ui.features.movieDetails.TrailerPlayer"></activity>
        <activity android:name=".ui.features.movieDetails.DetailsActivity" />
        <activity android:name=".ui.features.home.HomeActivity"
            android:exported="true"/>
        <activity android:name=".ui.features.login.RegisterActivity" />
        <activity android:name=".ui.features.login.LoginActivity" />
        <activity android:name=".ui.features.login.SwipeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <queries>
        <intent>
            <action android:name="com.google.android.youtube.api.service.START" />
        </intent>
    </queries>

</manifest>